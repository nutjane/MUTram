<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nutjane.android.MUTram.TimetableFragment">

    <!-- An invisible view aligned to the center of the parent. Allows other
    views to be arranged on either side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_welcome"
            android:text="@string/your_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/main_pref_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30sp"
            android:background="@color/sunshine_blue"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/main_pref_location_map"
            android:text="PIC"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="sans-serif-condensed"
            android:background="@color/black"
            android:textColor="@color/white"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/sunshine_light_blue">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blue_line_name"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="@string/blue_line_des"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/detail_tram_route"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/grey_700"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arrival_time"/>
                <TextView
                    android:id="@+id/blueLine_arrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:20"
                    android:textSize="30dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next_tram"/>

                    <TextView
                        android:id="@+id/blueLine_arrival_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:00"
                        android:paddingLeft="10dp"/>

                    </LinearLayout>


            </LinearLayout>




        </LinearLayout>


        </LinearLayout>







   </FrameLayout>